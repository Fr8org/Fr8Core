        <section id="contacts" class="text-block full-height-block" data-section="contacts">
            <div class="inner-bg full-size-bg"></div>
            <div class="container full-height-block">
                <div class="inner-wrap cetered ">
                    <h2>Get in touch</h2>
                    <div class="row-fluid section">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="span12 cform">
                                <h3>Want to ask something?</h3>
                                <form class="form clearfix contact-form" action="#">
                                    <p><span id="spMessage" class="contact-hint"></span></p>
                                    <input type="text" class="span12" placeholder="Name" name="name" id="name">
                                    <input type="email" class="span12" placeholder="Email" name="emailAddress" id="emailId">
                                    <textarea class="span12" placeholder="Message" name="message" rows="6" id="message"></textarea>
                                    <button class="btn btn-large submit-btn" type="button" onclick="SendMail();">Submit</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

